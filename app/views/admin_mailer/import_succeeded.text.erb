<% else %>
<%= t('.no_created_users') %>
<% end %>

<% unless @created_groups.empty? %>
<%= t('.created_groups') %>
  <%= @created_groups.each do |group| %>
  - <%= group.display_name %>
  <% end %>
<% else %>
<%= t('.no_created_groups') %>
<% end %>
